<div>
  <h2>Lista de productos directa</h2>
  <div id="prodslist">
    <ul>
      {{#each prods.docs}}
        <br />
        <li>Titulo:{{title}}, Id:{{id}}, Precio{{price}}, Stock:{{stock}}</li>
        <a href="http://localhost:8080/products/productDetail/?pId={{id}}">Check
          more details</a>
        <form
          method="put"
          action="/api/cart/642c4d884a1f8632ca115c10/product/{{id}}"
        >
          <button type="submit">Add to cart</button>
        </form>
        <br />
      {{/each}}
    </ul>
  </div>
  {{#if prods.hasPrevPage}}
        <a href="/products/?page={{prods.prevPage}}">Anterior</a>
        {{/if}}
        <span>PÃ¡gina {{prods.page}} de {{prods.totalPages}}</span>
        {{#if prods.hasNextPage}}
        <a href="/products/?page={{prods.nextPage}}">Siguiente</a>
        {{/if}}
</div>